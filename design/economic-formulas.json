  "GDP": {
    "formula": "GDP_growth[q] = base_trend + fiscal_impulse + monetary_impulse + external + confidence + productivity",
    "base_trend_annual": 1.5,
    "base_trend_quarterly": 0.375,
    "base_trend_monthly": 0.125,

    "fiscal_impulse": {
      "formula": "Σ(spending_change[i] × multiplier[type] × lag_weight[i]) - Σ(tax_change[i] × tax_multiplier[type] × lag_weight[i])",
      "see_multipliers": "fiscalMultipliers section"
    },

    "monetary_impulse": {
      "formula": "-0.30 × (Bank_Rate[t] - Bank_Rate[t-18]) / 4",
      "coefficient": -0.30,
      "lag_quarters": 6,
      "lag_months": 18,
      "note": "1pp Bank Rate rise reduces GDP by 0.30% after 18 months"
    },

    "external_sector": {
      "formula": "0.30 × EU_growth + 0.15 × US_growth - 0.10 × oil_shock",
      "EU_weight": 0.30,
      "US_weight": 0.15,
      "oil_weight": -0.10
    },

    "confidence": {
      "formula": "0.002 × (business_confidence - 100) + 0.001 × (consumer_confidence - 100)",
      "business_coefficient": 0.002,
      "consumer_coefficient": 0.001
    },

    "productivity": {
      "formula": "(NHS_quality + education_quality + infrastructure_quality - 180) / 10000",
      "note": "Services below average (60 each) create drag on GDP"
    },

    "components": {
      "consumption": 0.63,
      "government": 0.20,
      "investment": 0.17,
      "net_exports": -0.02
    }
  },

  "inflation": {
    "formula": "CPI[t] = 0.40×CPI[t-1] + 0.35×expectations + 0.15×domestic_pressure + 0.10×import_prices",

    "persistence": 0.40,
    "expectations_weight": 0.35,
    "domestic_pressure_weight": 0.15,
    "import_prices_weight": 0.10,

    "expectations": {
      "anchored": {
        "condition": "credibility_index > 50",
        "value": 2.0
      },
      "partial_deanchoring": {
        "condition": "30 < credibility_index < 50",
        "formula": "0.70 × CPI[t] + 0.30 × 2.0"
      },
      "fully_deanchored": {
        "condition": "credibility_index < 30",
        "formula": "CPI[t]"
      }
    },

    "domestic_pressure": {
      "formula": "0.30 × output_gap[t-3] + 0.25 × wage_growth[t-2]",
      "output_gap_coefficient": 0.30,
      "output_gap_lag": 3,
      "wage_coefficient": 0.25,
      "wage_lag": 2
    },

    "import_prices": {
      "formula": "0.25 × sterling_depreciation[t-6] + 0.50 × energy_prices[t-3]",
      "FX_passthrough": 0.25,
      "FX_lag": 6,
      "energy_passthrough": 0.50,
      "energy_lag": 3,
      "note": "10% sterling depreciation adds 2.5pp to CPI over 18 months"
    },

    "RPI": {
      "formula": "CPI + 1.0",
      "note": "RPI used for index-linked gilts and pensions"
    }
  },

